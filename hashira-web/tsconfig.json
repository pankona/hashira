{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2022"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowJs": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": [
      "react",
      "styled-components"
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
